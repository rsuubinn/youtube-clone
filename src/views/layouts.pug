doctype html 
html(lang="ko")
  head 
    title #{pageTitle} | #{siteName} 
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body 
    header
      h1=pageTitle
      nav
        ul 
          li 
            a(href="/") Home
          if !loggedIn
            li 
              a(href="/join") Join
            li 
              a(href="/login") Login
          else
            li 
              a(href="/logout") Logout
          li 
            a(href="/videos/upload") Upload
          li 
            a(href="/search") Search
      
    main 
      block content
    include partials/footer
    